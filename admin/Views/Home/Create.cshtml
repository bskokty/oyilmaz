@model oylmData.Data.Page

@{
    ViewBag.Icon = "fa fa-files-o";
    ViewBag.Title = "Sayfalar";
    ViewBag.altbaslik = "Yeni Sayfa";
    Layout = "~/Views/Shared/_Layout.cshtml";

}



@section pagecss
    {
    <style>
        .sagKenar {
            float: right;
        }
    </style>
}

@section pagescript{
    <script>



    $(function () {

        setactive(0);
    });

    </script>
    <script src="~/ckeditor/ckeditor.js"></script>
    <script>

        CKEDITOR.replace("editor1");
    </script>
    <script src="https://ajax.aspnetcdn.com/ajax/jQuery/jquery-3.2.1.min.js"></script>
    <script src="~/Scripts/jquery-3.2.1.min.js"></script>
 

}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">

        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <label class="control-label col-md-2"><b>Sayfa Adı : </b></label>

            <div class="col-md-5">
                @Html.EditorFor(model => model.name, new { htmlAttributes = new { @class = "form-control" }, @name = "ad" })
                @Html.ValidationMessageFor(model => model.name, "", new { @class = "text-danger" })
            </div>
        </div>

      
        <div class="form-group">
            <div class="col-md-offset-2 col-md-5">

                <input type="submit" value="Ekle" class="btn btn-primary sagKenar" />


            </div>
        </div>
    </div>
}


<div class="col-md-offset-2 col-md-5">
    @Html.ActionLink("Listeye Geri Dön", "Index", "", "", new { @class = " sagKenar" })
</div>