@model List<oylmData.Data.BlogYazi>


@{
    ViewBag.Icon = "fa fa-map-o";
    ViewBag.Title = "Slider";
    ViewBag.altbaslik = "Slider Ekle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section pagecss
    {
    <style>
        .sagKenar {
            float: right;
        }
    </style>

}
@section pagescript{
    <script>



    $(function () {

        setactive(3);
    });


    </script>

}
    @Html.AntiForgeryToken()
    <form id="demo-form2" method="post" enctype="multipart/form-data" data-parsley-validate="" class="form-horizontal form-label-left" novalidate="">
    <div class="form-horizontal">
        <h4></h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
 

        <div class="form-group">
            <label class="control-label col-md-2">
                <b>Slider :</b>
            </label>
            <div class="col-md-8 col-sm-6 col-xs-12">
                <input type="file" name="pic" />


            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-2"><b>Slider Yazısı(Büyük) : </b></label>

            <div class="col-md-8">
                
                @Html.Editor("buyuk", new { htmlAttributes = new { @class = "form-control" } })
              
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2"><b>Slider Yazısı(Orta) : </b></label>

            <div class="col-md-8">
                @Html.Editor("orta", new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>
      
        <div class="form-group">
            <label class="control-label col-md-2"><b>Slider Yazısı(Küçük) : </b></label>

            <div class="col-md-8">
                @Html.Editor("kucuk", new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>


        <div class="form-group">
            <label class="control-label col-md-2"><b>Bağlantı : </b></label>
            <div class="col-md-8">
          

                <select id="baslikSec" name="baslikSec" >
                    <option value="-1">Bağlantı vermek için Blog Yazısı Seçin</option>
                    @foreach (var item in Model)
                    {
                      
                        <option value="@item.id" >@item.Baslik</option>
                    }


     

                </select>
            </div>
        </div>
      
            <div class="form-group">
                <label class="control-label col-md-2"><b>Durum : </b></label>
                <div class="col-md-8">
                    <select name="statussec" id="statussec">

                        <option value="1">Aktif</option>
                        <option value="2">İnaktif</option>

                    </select="statussec">

                </div>
            </div>
   
        <div class="form-group">
            <div class="col-md-offset-2 col-md-8">

                <input type="submit" value="Ekle" class="btn btn-primary sagKenar" id="buton" />


            </div>
        </div>
    </div>
    
        </form>
 <div class="col-md-offset-2 col-md-8">
    @Html.ActionLink("Listeye Geri Dön", "Index", "Sliders", "", new { @class = " sagKenar" })
</div>
