@model admin.Models.SlideViewModel

@{
    ViewBag.Icon = "fa fa-map-o";
    ViewBag.Title = "Slider";
    ViewBag.altbaslik = "Güncelle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section pagecss
    {
    <style>
           .boyut{
            width:35%;
            height:35%;
        }
        .beyaz {
            color: #f9fafb;
        }

        .sagKenar {
            float: right;
        }
    </style>

}
@section pagescript{
    <script>



        $(function () {

            setactive(3);
        });


    </script>

}
@Html.AntiForgeryToken()
<form id="demo-form2" method="post" enctype="multipart/form-data" data-parsley-validate="" class="form-horizontal form-label-left" novalidate="">
    <div class="form-horizontal">
        <h4></h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        @Html.HiddenFor(model => model.ID)

        @Html.HiddenFor(model => model.ID)

        <div class="form-group">
            <label class="control-label col-md-2">
                <b>Slider :</b>
            </label>
            <div class="col-md-8 col-sm-6 col-xs-12">
                <input type="file" name="pic" />
                @{string a = "/"+Model.sliderContent; }
                <img src="@a" class="boyut" />

            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2"><b>Slider Yazısı(Büyük) : </b></label>

            <div class="col-md-8">
                @Html.EditorFor(model => model.buyuk, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.buyuk, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2"><b>Slider Yazısı(Orta) : </b></label>

            <div class="col-md-8">
                @Html.EditorFor(model => model.orta, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.orta, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2"><b>Slider Yazısı(Orta) : </b></label>

            <div class="col-md-8">
                @Html.EditorFor(model => model.kucuk, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.kucuk, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2"><b>Bağlantı : </b></label>
            <div class="col-md-10">


                <select id="baslikSec" name="baslikSec">
                    <option value="-1">Bağlantı vermek için Blog Yazısı Seçin</option>
                    @foreach (var item in Model.blgyzi)
                    {

                        <option @(Model.byaziid==item.id? "selected":" ")   value="@item.id">@item.Baslik</option>
                    }

                   


                </select>
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2"><b>Durum : </b></label>
            <div class="col-md-8">
                <select id="statussec" name="statussec">

                    <option @(Model.status == 1 ? "selected" : " ") value="1">Aktif</option>
                    <option @(Model.status == 2 ? "selected" : " ") value="2">İnaktif</option>

                </select>

            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-8">

                <button type="submit" class="btn btn-primary sagKenar" id="buton">Güncelle</button>


            </div>
        </div>
    </div>
        </form>
       <div class="col-md-offset-2 col-md-8">
              @Html.ActionLink("Listeye Geri Dön", "Index", "Sliders", "", new { @class = " sagKenar" })
       </div>
