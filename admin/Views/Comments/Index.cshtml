@model IEnumerable<oylmData.Data.yorumlar>

@{
    ViewBag.Icon = "fa fa-comments-o";
    ViewBag.Title = "Yorumları Denetle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section pagecss
    {
    <style>
        .beyaz {
            color: #f9fafb;
        }

        .textstop {
            width: 500px;

            white-space: nowrap;
            overflow: hidden;
            text-overflow: ellipsis;
        }
    </style>
}
@section pagescript{
    <script>



    $(function () {

        setactive(6);
    });

    </script>
}




<div id="yenialan" style="margin-top:-9px;">
    <h5></h5>
    <div class="x_panel" style="margin-top:-9px;">

        <p class="x_content">

            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Mail</th>
                        <th>Yorum</th>
                        <th>İçerik</th>
                        <th>Durum</th>
                        <th></th>
                    </tr>
                </thead>

                @foreach (var item in Model)
                {
                    <tr>
                        <td></td>
                        <td>
                            @Html.DisplayFor(modelItem => item.mail )
                        </td>
                        <td>
                            <div class="textstop">   @Html.DisplayFor(odelItem => item.content)</div>
                            @*@Html.DisplayFor(modelItem => item.contenttext, new {@class= "textstop" })*@
                        </td>
                        <td>@Html.DisplayFor(modelItem => item.BlogYazi.Baslik)</td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Status.status1)
                        </td>
                        <td>
                           

                            <span>@Html.ActionLink("Güncelle", "Details", new { id = item.id })</span>
                            <span>||</span>
                            <span>@Html.ActionLink("Sil", "Delete", new { id = item.id })</span>




                        </td>
                    </tr>
                }

            </table>
    </div>
</div>

