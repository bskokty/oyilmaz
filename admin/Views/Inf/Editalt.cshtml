
@model oylmData.Data.altbaslik

@{
    ViewBag.Icon = "fa fa-check";
    ViewBag.Title = "Koçluk Nedir?";
    ViewBag.altbaslik = "Alt Başlık Düzenle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section pagecss
    {
    <style>
        .boyut {
            width: 35%;
            height: 35%;
        }

        .beyaz {
            color: #f9fafb;
        }

        .sagKenar {
            float: right;
        }
    </style>
}
@section pagescript{
    <script>



        $(function () {

            setactive(4);
        });

    </script>

    <script src="~/ckeditor/ckeditor.js"></script>
    <script>

        CKEDITOR.replace("editor1");
    </script>
    <script src="https://ajax.aspnetcdn.com/ajax/jQuery/jquery-3.2.1.min.js"></script>
    <script src="~/Scripts/jquery-3.2.1.min.js"></script>


}
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <form method="post">
        <div class="form-horizontal">

            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                <label class="control-label col-md-2"><b>Alt Başlık : </b></label>

                <div class="col-md-5">
                    @Html.EditorFor(model => model.adi, new { htmlAttributes = new { @class = "form-control" }, @name = "ad" })
                    @Html.ValidationMessageFor(model => model.adi, "", new { @class = "text-danger" })
                </div>
            </div>


            <div class="form-group">
                <div class="col-md-offset-2 col-md-5">

                    <input type="submit" value="Güncelle" class="btn btn-primary sagKenar" />


                </div>
            </div>
        </div>
    </form>
}




<div class="col-md-offset-2 col-md-5">
    @Html.ActionLink("Listeye Geri Dön", "altbaslikIndex", "Inf", "", new { @class = " sagKenar" })
</div>

