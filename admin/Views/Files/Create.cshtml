@model oylmData.Data.sertifikalar

@{
    ViewBag.Icon = "fa fa-file";
    ViewBag.Title = "Belgeler";
    ViewBag.altbaslik = "Yeni Belge";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section pagecss
    {
    <style>
        .beyaz {
            color: #f9fafb;
        }

        .textstop {
            width: 500px;
            height: 35px;
            white-space: nowrap;
            overflow: hidden;
            text-overflow: ellipsis;
        }

        .sagKenar {
            float: right;
        }
    </style>
}
@section pagescript{
    <script>



        $(function () {

            setactive(8);
        });

    </script>
  }




<div class="row">
    <div class="col-md-12 col-sm-12 col-xs-12">
        <div class="x_panel">

            <div class="x_content">
      
                <form id="demo-form2" method="post" enctype="multipart/form-data" data-parsley-validate="" class="form-horizontal form-label-left" novalidate="">


                    <div class="form-horizontal">

                        <hr />
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <div class="form-group">
                            <label class="control-label col-md-2">
                                <b>Belge :</b>
                            </label>
                            <div class="col-md-8 col-sm-6 col-xs-12">
                                <input type="file" name="pic" />


                            </div>
                        </div>

                        <div class="form-group">
                            <label class="control-label col-md-2"><b>Belge Adı : </b></label>

                            <div class="col-md-8">
                                @Html.EditorFor(model => model.name, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.name, "", new { @class = "text-danger" })
                            </div>
                        </div>

                 
                
                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-8">

                                <input type="submit" value="Ekle" class="btn btn-primary sagKenar" />


                            </div>
                        </div>
                    </div>

                </form>
            </div>
        </div>
    </div>
</div>


<div class="col-md-offset-2 col-md-8">
    @Html.ActionLink("Listeye Geri Dön", "Index", "Files", "", new { @class = " sagKenar" })
</div>
