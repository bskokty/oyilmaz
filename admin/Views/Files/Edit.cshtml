@model oylmData.Data.sertifikalar

@{
    ViewBag.Icon = "fa fa-file";
    ViewBag.Title = "Belgeler";
    ViewBag.altbaslik = "Düzenle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@section pagecss
    {
    <style>
        .boyut {
            width: 35%;
            height: 35%;
        }

        .beyaz {
            color: #f9fafb;
        }

        .sagKenar {
            float: right;
        }
    </style>
}
@section pagescript{
    <script>



        $(function () {

            setactive(8);
        });

    </script>
    
}
<form id="demo-form2" method="post" enctype="multipart/form-data" data-parsley-validate="" class="form-horizontal form-label-left" novalidate="">

    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4></h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.id)


        <div class="form-group">
            <label class="control-label col-md-2">
                <b>Belge :</b>
            </label>
            <div class="col-md-8 col-sm-6 col-xs-12">
                <input type="file" name="pic" />
                @if (Model.folder != null)
                {
                    string a = "/" + Model.folder;
                    <iframe src="@a" class="boyut"></iframe>
                }


            </div>
        </div>


        <div class="form-group">
            <label class="control-label col-md-2"><b>Belge Adı : </b></label>
            <div class="col-md-8">
                @Html.EditorFor(model => model.name, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.name, "", new { @class = "text-danger" })
            </div>
        </div>





        <div class="form-group">
            <div class="col-md-offset-2 col-md-8">

                <button type="submit" class="btn btn-primary sagKenar" id="buton">Güncelle</button>


            </div>
        </div>
    </div>
</form>
<div class="col-md-offset-2 col-md-8">
    @Html.ActionLink("Listeye Geri Dön", "Index", "Files", "", new { @class = " sagKenar" })
</div>
